<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TF.Views.AboutPage"
             xmlns:vm="clr-namespace:TF.ViewModels;"
             xmlns:custom="clr-namespace:TF.Renderers;assembly=TF">
    <ScrollView Orientation="Vertical">
        <StackLayout Orientation="Vertical">
            <custom:BorderlessButton  Text="{Binding DisplayType}" HorizontalOptions="EndAndExpand" Clicked="TimeButton_Click"/>
            <custom:BorderlessButton  Text="{Binding DisplayPeriod}" HorizontalOptions="EndAndExpand" Clicked="TimeButton_Click"/>
            <Label Text="{Binding Summary}" TextColor="Green"/>
        </StackLayout>        
    </ScrollView>
</ContentPage>